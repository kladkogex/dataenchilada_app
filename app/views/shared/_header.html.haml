          = link_to sessions_path, method: :delete, style:'height: 64px;', class:'fl-h-center', id:'logout' do
            .padd_left_md.padd_ri_md
              = inline_svg 'icons/logout.svg', class: 'red-svg'
          -#.mdl-tooltip.mdl-tooltip--large{:for => "logout"}
            Logout

            -#%a{:href => "http://hub.galacticexchange.io/users/new"}
              .gx_btn.gx_btn_blue.mdl-button.mdl-js-button.mdl-js-ripple-effect{style:'font-size: 13px;    text-transform: none !important; padding: 0px 35px;'}
