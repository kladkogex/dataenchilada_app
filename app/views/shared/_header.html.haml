%header.header
  .containerr.fl-center.fl-cont{style:"height: 100%;"}
    .fl-wrap.fl-grow.padd_left_10
      = link_to fluentd_ui_logo, root_path, class: "navbar-brandd fluentd-ui-logo"

      -#=link_to  'ffff' do
        =image_tag "logos/main.png", class:"header_logo"
    .fl-wrap
      .padd_left_md.hidden-sm-up
        .fl-cont
          .navbar-toggle
            %div{"data-target" => "#myNavbar", "data-toggle" => "collapse"}
